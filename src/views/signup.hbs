<div class="container pt-4">
    <div class=" col-md-6 mx-auto">
    <div class="card ">
        <div class="card-header">
            <div class="display-6">Registrarse</div>
        </div>
        <div class="card-body">
            <form action="/signup" method="post" >
                    <div class="form-control text-dark mb-2">
                        <h6>Selecciona tu escuela</h6>
                <select class="form-select mb-2" name="school_id" aria-label="Default select example">
                    {{#each rows}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                    </div>
                <div class="form-control text-dark mb-2">
                    <h6>Selecciona tu rol</h6>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rol" id="flexRadioDefault1" value="option1">
                        <label class="form-check-label" for="flexRadioDefault1">Profesor</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="rol" id="flexRadioDefault2" value="option2" checked>
                        <label class="form-check-label" for="flexRadioDefault2">Estudiante</label>
                     </div>
                </div>
                <div class="form-group mb-2">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{name}}"> 
                </div>
                <div class="form-group mb-2">
                    <input type="email" name="email" class="form-control" placeholder="Email" value="{{email}}"> 
                </div>
                <div class="form-group mb-2">
                    <input type="password" name="password" class="form-control" placeholder="Contraseña"> 
                </div>
                <div class="form-group mb-2">
                    <input type="password" name="confirm_password" class="form-control" placeholder="Confirma la contraseña"> 
                </div>
                <div class="form-group mb-2 text-center mx-auto">
                    <button class="btn btn-success  mt-3 col-4">Registrar</button>
                </div>
            </form>

        </div>
    </div>
</div>
</div>